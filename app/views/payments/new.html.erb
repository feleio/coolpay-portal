<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Make payment to <%= @recipient_name %></h2>
      <form class="form" method="post" action="/payments/create">
        <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
        <%= tag(:input, :type => "hidden", :name => 'recipient_id', :value => @recipient_id) %>
        <label for="inputAmount">Amount</label>
        <input type="number" step="any" name="amount" id="inputAmount" class="form-control" placeholder="0.00" required autofocus>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Pay</button>
      </form>
    </div>
